@model IEnumerable<TripAgencyProject.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Post", "Create",null,new { @class = "btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Post1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TripTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TripDetails)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TripDestination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TripPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TripImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TripAgency.Username)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Post1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TripTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TripDetails)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TripDestination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TripPrice)
        </td>
        <td>
            <img src="@Url.Content(item.TripImage)" width="50" height="50" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TripAgency.Username)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id} , new { @class="btn btn-warning"}) |
            @Html.ActionLink("Details", "Details", new { id=item.Id } , new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id } , new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
